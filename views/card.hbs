<h1>Корзина</h1>

<div id="card">
    {{#if course.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each course}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="waves-effect waves-light btn-small js-delete-card" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>
    {{else}}
    <p>Корзина пуст</p>
    {{/if}}
</div>