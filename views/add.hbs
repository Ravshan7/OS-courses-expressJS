<h1>Добавить курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="2">
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Укажите цену"></span>
    </div>

    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required>
        <label for="img">URL картинка курса</label>
        <span class="helper-text" data-error="Введите url курса"></span>
    </div>

    <button class="waves-effect waves-light btn-large">Добавить курс</button>

</form>